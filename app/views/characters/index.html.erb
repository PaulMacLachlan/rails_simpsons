<h1>Simpsons Characters</h1>
<table>
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Workplace</th>
        <th>Created</th>
    </thead>
    <tbody>
<% @characters.each do |c| %>
        <tr>
            <td><a href="/characters/<%= c.id %>"><%= c.first_name %></a></td>
            <td><%= c.last_name %></td>
            <td><%= c.workplace %></td>
            <td><%= c.created_at %></td>
        </tr>
<% end %>
    </tbody>
</table>
<a href="/characters/new">New Character</a>